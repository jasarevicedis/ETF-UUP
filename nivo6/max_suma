#include <stdio.h>

int maxsuma(int* niz, int vel){
    int *poc=niz;
    int *pok = niz;
    int *iza_kraja = niz+vel;
    int *max;
    int broj, suma,cifra, max_suma=0;
    if(poc==iza_kraja){
        return 0;
        //prazan skup
    }
    for(;pok<iza_kraja;pok++){
        broj=*pok;
        if(broj<0){
            broj*=(-1);
        }
        suma=0;
        while(broj!=0){
            cifra=broj%10;
            suma+=cifra;
            broj/=10;
        }
        if(suma>max_suma){
            max_suma=suma;
            max=pok;
        }
    }
    return *max;
}

int main() {
	printf("Lekcija 6: Pokazivaƒçi, Max suma cifara");
	return 0;
}
