#include <stdio.h>

int main() {
    int potpun_kvadrat(int a);
    int a;
    int x;
    int k;
    x= potpun_kvadrat(a);
	printf("%d", x);
	return 0;
}
int potpun_kvadrat(int a){
    int k;
    if(a<0){
        a=a*(-1);
    }
    else if(a==1){
        k=1;
        return k;
    }
    
    for(k=1;k<a/2;k++){
        if(k*k==a){
            k=1;
            return k;
        }
    }
    k=0;
    return k;
}
