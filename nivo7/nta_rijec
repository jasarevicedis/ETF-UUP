#include <stdio.h>


//funkcija pronadjena u predavanjima iz stringova(16)

void nta_rijec(const char* str, char* rijec, int n){
    
    int neslovo=1, broj_rijeci=0;
    const char *pocetak, *kraj;
    
    while(*str != '\0'){
        if( !(*str >= 'A' && *str <='Z' || *str >= 'a' && *str <= 'z')){
            neslovo=1;
        }
        else if(neslovo == 1){
            neslovo=0;
            broj_rijeci++;
            if(broj_rijeci==n){
                pocetak=str;
            }
            if(broj_rijeci==n+1 ){
                kraj=str;
            }
        }
        str++;
    }
    
    //printf("(%c)(%c)", *pocetak, *kraj);
    
    char *temp =  rijec;
    if(n>broj_rijeci){
        *rijec='\0';
    }
    else{
    for(;pocetak<kraj;pocetak++){
         if( !(*pocetak >= 'A' && *pocetak <='Z' || *pocetak >= 'a' && *pocetak <= 'z')){
             *rijec='\0';
             break;
         }
         else{
             *rijec=*pocetak;
             rijec++;
         }
    }
    }
    rijec=temp;
    
    
    //printf("(%d)", broj_rijeci);
    
}

int main() {
	printf("Lekcija 7: Stringovi, Nta rijeÄ");
	return 0;
}
